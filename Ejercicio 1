public static void main(String[] args) {
        float temperatura;
        float celsius;
        float fahrenheit;
        
        celsius=0;
        fahrenheit= (celsius*9/5) + 32;
        System.out.println(celsius + " grados celsius corresponde a "+fahrenheit+" grados fahrenheit");
        
        fahrenheit= 32;
        celsius=(fahrenheit - 32) * 5/9;
        System.out.println(fahrenheit + " grados fahrenheit corresponde a "+celsius+" grados celsius");
        
        fahrenheit= 100;
        celsius=(fahrenheit - 32) * 5/9;
        System.out.println(fahrenheit + " grados fahrenheit corresponde a "+celsius+" grados celsius");
        
        celsius=100;
        fahrenheit= (celsius*9/5) + 32;
        System.out.println(celsius + " grados celsius corresponde a "+fahrenheit+" grados fahrenheit");
        
        celsius=25;
        fahrenheit= (celsius*9/5) + 32;
        System.out.println(celsius + " grados celsius corresponde a "+fahrenheit+" grados fahrenheit");
        
        celsius=-10;
        fahrenheit= (celsius*9/5) + 32;
        System.out.println(celsius + " grados celsius corresponde a "+fahrenheit+" grados fahrenheit");
        
        fahrenheit= -40;
        celsius=(fahrenheit - 32) * 5/9;
        System.out.println(fahrenheit + " grados fahrenheit corresponde a "+celsius+" grados celsius");
}
